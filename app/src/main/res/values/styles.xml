<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryDark">@color/orange</item>
        <item name="colorAccent">@color/orange</item>
    </style>
<!--Edittext style-->
    <style name="Edittext" parent="Widget.AppCompat.EditText">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:layout_marginHorizontal">@dimen/_15sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/gotham_medium</item>
        <item name="android:backgroundTint">@color/primaryGrey</item>
    </style>
    <style name="txtHint" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginHorizontal">@dimen/_15sdp</item>
        <item name="android:fontFamily">@font/gotham_medium</item>
       <item name="android:layout_marginLeft">@dimen/_4sdp</item>
    </style>
    <style name="txtBtn" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">@dimen/_130sdp</item>
        <item name="android:layout_height">@dimen/_32sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/layer_list</item>

    </style>
<style name="checkbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_gravity">end</item>
    <item name="android:layout_marginBottom">24dp</item>
    <item name="android:layout_marginTop">8dp</item>
    <item name="android:fontFamily">@font/gotham_medium</item>
    <item name="android:textColor">@color/black</item>
    <item name="android:textSize">6pt</item>

</style>
    <style name="buttonSign" parent="TextAppearance.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_27sdp</item>
        <item name="android:background">@drawable/layer_list</item>
        <item name="android:layout_marginHorizontal">@dimen/_20ssp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:elevation">@dimen/_5sdp</item>

    </style>
    <style name="imageViewtyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">60dp</item>

    </style>

    <style name="MyToolbarTheme"
    parent="@style/ThemeOverlay.AppCompat.Dark">
    <item name="colorControlNormal">@color/white</item>
    <item name="titleTextColor">@color/white</item>
</style>



</resources>