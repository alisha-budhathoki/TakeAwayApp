<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/txtr_uname"
        android:text="@string/txt_uname"
        style="@style/txtHint"
        android:layout_marginTop="@dimen/_10sdp"
        android:drawableStart="@drawable/icon_email_address"
        android:drawablePadding="16dp"
        android:textColor="@color/lightGrey"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />
    <EditText
        android:id="@+id/edittxtr_uname"
        style="@style/Edittext"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtr_uname" />

    <TextView
        android:id="@+id/txtr_em"
        android:text="@string/txt_email"
        style="@style/txtHint"
        android:drawableStart="@drawable/icon_email_address"
        android:drawablePadding="16dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="@color/lightGrey"
        app:layout_constraintTop_toBottomOf="@+id/edittxtr_uname"
        app:layout_constraintStart_toStartOf="parent"
        />
    <EditText
        android:id="@+id/edittextr_em"
        style="@style/Edittext"
        android:inputType="textEmailAddress"
        android:textColor="@color/lightGrey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtr_em" />

    <TextView
        android:id="@+id/txtr_phn"
        android:text="@string/txt_phone_no"
        style="@style/txtHint"
        android:drawableStart="@drawable/icon_email_address"
        android:drawablePadding="16dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="@color/lightGrey"
        app:layout_constraintTop_toBottomOf="@+id/edittextr_em"
        app:layout_constraintStart_toStartOf="parent"
        />
    <EditText
        android:id="@+id/editext_phn"
        style="@style/Edittext"
        android:inputType="phone"
        android:textColor="@color/lightGrey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtr_phn" />


    <TextView
        android:id="@+id/txtr_pw"
        android:text="@string/txt_pw"
        style="@style/txtHint"
        android:drawableStart="@drawable/icon_email_address"
        android:drawablePadding="16dp"
        android:layout_marginTop="@dimen/_10sdp"
        android:textColor="@color/lightGrey"
        app:layout_constraintTop_toBottomOf="@+id/editext_phn"
        app:layout_constraintStart_toStartOf="parent"
        />
    <EditText
        android:id="@+id/edittextr_pw"
        style="@style/Edittext"
        android:inputType="textPassword"
        android:textColor="@color/lightGrey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtr_pw" />
    <CheckBox
        android:id="@+id/cbr_terms"
        style="@style/checkbox"
        app:buttonTint="@color/checkbox_filter_tint"
        tools:targetApi="21"
        android:text="@string/terms_nd_condtn"
        android:textColor="@color/black"
        android:textSize="6pt"
        android:layout_marginLeft="@dimen/_30sdp"
        app:layout_constraintTop_toBottomOf="@id/edittextr_pw"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/btn_signIN"
        android:text="SIGN IN NOW"
        style="@style/buttonSign"
        android:layout_marginHorizontal="@dimen/_30sdp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cbr_terms"
        />

</androidx.constraintlayout.widget.ConstraintLayout>