<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.AppCompat.NoActionBar"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/viewPager1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/imageDef"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:background="@drawable/simg_sign"
            android:scaleType="fitStart"
    />
    </androidx.appcompat.widget.Toolbar>
    <com.google.android.material.tabs.TabLayout
    android:id="@+id/tabLayout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_40sdp"
    app:tabGravity="fill"
    android:background="@drawable/shapes"
    app:tabIndicatorColor="@color/orange"
    app:tabIndicatorHeight="4dp"
    app:tabIndicator="@drawable/custom_indicator"
    app:tabSelectedTextColor="@color/black"
    app:tabTextColor="@color/primaryGrey"
    app:tabMode="fixed"
    app:layout_constraintTop_toBottomOf="@+id/viewPager1"
    app:layout_constraintStart_toStartOf="parent">
    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager.widget.ViewPager
    android:id="@+id/viewPager2"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_470sdp"
        app:layout_constraintTop_toBottomOf="@+id/tabLayout"
        app:layout_constraintStart_toStartOf="parent"
        >
    </androidx.viewpager.widget.ViewPager>
</androidx.constraintlayout.widget.ConstraintLayout>

