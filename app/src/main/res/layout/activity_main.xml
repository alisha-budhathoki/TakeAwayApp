<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bckgrnd_mn"
    tools:context=".MainActivity">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/menuTkFood"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_180sdp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="@dimen/_280sdp"
            android:layout_marginRight="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/take_food" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/menuTkMart"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_180sdp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="@dimen/_280sdp"
            android:layout_marginRight="2dp"
            app:layout_constraintStart_toEndOf="@+id/menuTkFood"
            app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/take_mart" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/menuTkSnd"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_180sdp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="@dimen/_280sdp"
            android:layout_marginRight="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/menuTkMart"
            app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/take_sent" />

        </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>